<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IdeaPicker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IdeaPicker.Views"
    Shell.FlyoutBehavior="Disabled">

   <TabBar>
       <Tab Title="Add Place">
           <ShellContent 
               Title="Home"
               ContentTemplate="{DataTemplate local:AddPlace}"
               Route="AddPlace"
               ></ShellContent>
           
       </Tab>
       <Tab Title="Pick Place">
           <ShellContent 
               Title="Home"
               ContentTemplate="{DataTemplate local:GeneratePlace}"
               Route="GeneratePlace"
           ></ShellContent>
           
       </Tab>
   </TabBar>

</Shell>
