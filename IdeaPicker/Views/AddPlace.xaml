<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPicker.Views.AddPlace">
    <ContentPage.Content>
        <StackLayout Padding="20, 20">
            <Label Text="Add Restaurant" FontSize="Large" FontAttributes="Bold" Margin="0,0,0,20"></Label>
            <Border Stroke="gray" StrokeThickness="1">
                <Entry x:Name="txtRestaurantName"></Entry>
            </Border>
            
            <Button Text="Add Restaurant" Clicked="AddRestaurant_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>